# =============================================================
# AI Pipeline — environment variables
# Copy this file to .env and fill in your keys
# =============================================================

# ── LLM (required) ────────────────────────────────
# Gemini 2.5 Flash is used for ALL LLM tasks by default
# Same key also authenticates Imagen 4 for thumbnail generation
GEMINI_API_KEY=

# DeepSeek V3.2 — optional fallback for long-output tasks
DEEPSEEK_API_KEY=

# ── Thumbnail — A/B variant ──────────────────────
# GPT Image 1.5 (highest Arena Elo 1264) — optional
# If not set, only Imagen 4 variants are generated
OPENAI_API_KEY=

# ── TTS (pick at least one) ──────────────────────
# Kokoro via Hugging Face — FREE, recommended for dev
HF_TOKEN=

# Google Cloud TTS Neural2 — $0.016/1M chars
GOOGLE_TTS_API_KEY=

# Fish Audio — $0.012/1M chars, best voice quality
FISH_AUDIO_API_KEY=

# Resemble AI — optional
RESEMBLE_API_KEY=

# ── Video Generation (pick at least one) ────────────────
# Replicate — RECOMMENDED! $0 minimum, pay-as-you-go
# Get token: https://replicate.com/account/api-tokens
# Haiper Video 2: $0.25/5sec | Kling v1.6 Pro: $0.49/5sec
REPLICATE_API_TOKEN=

# Runware — $10 FREE credits, requires $5+ top-up for video
# Get key: https://my.runware.ai/wallet
# Wan 2.6 Flash: $0.20/5sec | Kling v2.5: $0.35/5sec
RUNWARE_API_KEY=

# AIMLAPI — 50k credits (requires $20 min top-up)
# Get key: https://aimlapi.com/app/billing
AIMLAPI_API_KEY=

# Fal.ai — removed free credits in Dec 2025
# Get key: https://fal.ai/dashboard/keys
FALAI_API_KEY=

# Kie.ai — requires balance top-up
# Get key: https://kie.ai/dashboard
KIEAI_API_KEY=
KIEAI_BASE_URL=https://api.kie.ai
KIEAI_WEBHOOK_URL=

# ── Media Production ─────────────────────────────
HEYGEN_API_KEY=
PEXELS_API_KEY=

# ── YouTube ──────────────────────────────────
YOUTUBE_API_KEY=
YOUTUBE_OAUTH_CLIENT_ID=
YOUTUBE_OAUTH_CLIENT_SECRET=
YOUTUBE_REFRESH_TOKEN=

# ── Telegram Bot ─────────────────────────────
TELEGRAM_BOT_TOKEN=
TELEGRAM_ALLOWED_USER_ID=

# ── Storage ──────────────────────────────────
# GCS bucket for thumbnails (defaults to local ./storage/ in dev)
STORAGE_BUCKET=ai-pipeline-thumbnails
STORAGE_BASE_URL=

# ── Public URLs (for Admin UI) ─────────────────────
# Leave empty for local development (uses localhost defaults)
API_GATEWAY_URL=
